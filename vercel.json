{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/gunicorn_cmd.sh"
    }
  ],
  "env": {
    "SECRET_KEY": "@django_secret_key654654",
    "DEBUG": "True",
    "ALLOWED_HOSTS": "mercearia-django.vercel.app",
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "setup.settings",
    }
  },
  "outputDirectory": "staticfiles"
}
